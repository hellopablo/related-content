{
    "name": "hellopablo/related-content",
    "description": "A framework for analysing objects in your application and finding related content.",
    "type": "library",
    "require": {
        "php": "^7.2",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5.4",
        "phpstan/phpstan": "^0.12.19"
    },
    "suggest": {
        "ext-pdo": "Install the PDO extension to use the MySQL Store"
    },
    "autoload": {
        "psr-4": {
            "HelloPablo\\RelatedContent\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
